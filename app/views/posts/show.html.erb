<h1><%= @post.title %></h1>
<% if @post.cover_picture.attached? %>
    <%= image_tag @post.cover_picture, width: "40%" %>
<% end %>



<h2>Краткое описание</h2>
<p> <%= @post.summary %> </p>


<strong>Текст поста</strong>
<p><%= @post.body %> </p>
<section>
<small>Опубликован: <% if @post.user.email == current_user&.email %></small>
  опубликован вами
  <% else %>
  <%= @post.user.email %>
  <% end %>
  <small>
    <%if @post.user_id == current_user&.id %>
      <%= link_to 'Редактировать пост', edit_post_path(@post) %>
      <%= link_to 'Удалить пост',post_path(@post), method: :delete, data: {confirm: 'Вы уверены?'} %>
    <% end %> 
  </section>
  <p>
    <strong>Комментарии:</strong>
    <%= render @post.comments %>
    <%= render partial: 'comments/form', locals: { post: @post } %>
  </p>

